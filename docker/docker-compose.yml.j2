version: '3'

services:
{% if DB_REDEPLOY=='true' %}
  postgresql:
    image: postgres
    restart: always
    ports:
      - 5432:5432
    environment:
      - POSTGRES_PASSWORD:{{ DB_PASSWORD }}
    container_name: postgresql
{% endif %}

  tomcat:
    image: tomcat:9-jre8-slim
    container_name: tomcat
    restart: always
    volumes:
      - /tomcat/logs:/usr/local/tomcat/logs
      - "/patch/{{ SP_VERSION }}/target/abscence-control.war:/usr/local/tomcat/webapps/absence-control.war"
      - "/patch/{{ SP_VERSION }}/target/absence-control:/usr/local/tomcat/webapps/absence-control"
    ports:
      - 8085:8080
    links:
      - postgresql:db

{% if ELK_REDEPLOY=='true' %}
  elasticsearch:
    image: elasticsearch:2.0.0
    command: elasticsearch -Des.network.host=0.0.0.0
    ports:
      - "9200:9200"
  logstash:
    image: logstash:2.0.0-1
    command: logstash -f /etc/logstash/conf.d/logstash.conf
    volumes:
    - ./logstash:/etc/logstash/conf.d
    ports:
    - "5000:5000"
    links:
      - elasticsearch
  kibana:
    image: kibana:4.2.0
    ports:
      - "5601:5601"
    links:
      - elasticsearch
{% endif %}
